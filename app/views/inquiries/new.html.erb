<div class="two columns">&nbsp;</div>
<div class="nine columns">
  <%= render :partial => "#{@inquiry.current_step}_copy" %>
  <div class="clear"></div>
  <%= simple_form_for(@inquiry) do |f| %>
    <%= f.error_notification %>

    <div class="inputs">
      <fieldset>
        <%= render "#{@inquiry.current_step}_step", :f => f %>
      </fieldset>
    </div>

    <div class="actions">
    <% if @inquiry.last_step? %>
      <%= f.submit "&lt; Back".html_safe, :name => "back_button" %>
      <%= f.submit 'Send'.html_safe %>
    <% else %>
      <%= f.submit "&lt; Back".html_safe, :name => "back_button" %>
      <%= f.submit 'Next &gt;'.html_safe %>
    <% end %>
    </div>
  <% end %>
  <% unless @inquiry.first_step? %>
    <% if @inquiry.last_step? %>
      <p></p>
    <% else %>
      <p>We found <%= @inquiry.num_results %> providers that match your needs. Answer the question above for more targeted results, or you can <%= link_to "get in touch now", inquiries_path(:finish => "1") %>.</p>
    <% end %>
  <% end %>
</div>
<div class="one column">&nbsp;</div>
<div class="four columns">
  <div class="social">
    <p>Know someone who needs help?<br/>Spread the word about DrugKick!</p>
  </div>
  <div class="providers">
    <p><strong>Treatment Providers</strong></p>
    <ul>
      <li>Grow your network</li>
      <li>Connect with people in need</li>
      <li>Pre-qualified matches</li>
      <li>Manage your online profile</li>
    </ul>
    <a href="#" class="button">Contact us to join our network</a>
  </div>
</div>
<div class="clear"></div>